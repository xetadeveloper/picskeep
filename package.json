{
  "name": "picskeep",
  "version": "1.0.0",
  "description": "a picture app for storing pictures",
  "main": "server/server.js",
  "type": "module",
  "engines": {
    "node": "15.6.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "testWatch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watchAll",
    "start": "node server/server.js",
    "server": "nodemon --watch server/ server/server.js",
    "client": "npm run start --prefix ./client",
    "client-build" : "npm run build --prefix client",
    "app": "concurrently \"npm run server\" \"npm run client\"",
    "reactDevBuild": "cd .\\client && npm run build && ren build\\index.html app.html",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && mv ./client/build/index.html ./client/build/app.html "
  },
  "jest": {
    "collectCoverage": true,
    "transform": {},
    "testEnvironment": "node",
    "coverageReporters": [
      "html"
    ]
  },
  "author": "xetadev",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.37.0",
    "@aws-sdk/s3-request-presigner": "^3.37.0",
    "aws-sdk": "^2.1009.0",
    "bcrypt": "^5.0.1",
    "connect-mongodb-session": "^3.1.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "formidable": "^1.2.2",
    "mongodb": "^4.1.2",
    "nodemailer": "^6.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "axios": "^0.21.4",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.0",
    "heroku-client": "^3.1.0",
    "jest": "^27.2.4",
    "supertest": "^6.1.6"
  }
}
